<div metal:use-macro="view.layout" xmlns="http://www.w3.org/1999/html">
    <div metal:fill-slot="main_content">

        <section class="section-page my-account-page my-account-profile-page">
            <div class="section-page-content">
                <div class="container">
                    <h1>My Account <span>> Profile</span></h1>

                    <div class="block-steps">

                        <div class="row block-step">
                            <div class="col-12 col-lg-3 left-menu">
                                <div class="left-menu-content">

                                    <div class="mobile-left-menu d-lg-none clearfix navbar-light">
                                        <h4 class="float-left">Menu</h4>
                                        <div class="navbar-toggler float-right"><span
                                                class="navbar-toggler-icon"></span></div>
                                    </div>

                                    <ul>
                                        <li>
                                            <a href="/account" class="btn btn-link">Overview</a>
                                        </li>
                                        <li>
                                            <a href="/account/update_profile" class="btn btn-link active">Profile</a>
                                        </li>
                                        <!--?                               <li>-->
                                        <!--?                                   <a href="#" class="btn btn-link">Statistics</a>-->
                                        <!--?                               </li>-->
                                        <li>
                                            <a href="#" class="btn btn-link">Orders</a>
                                        </li>
                                        <li>
                                            <a href="/links/new_linksorder" class="btn btn-submit btn-green">Start A New
                                                Dash</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <div class="col-12 col-lg-9 right-content">

                                <div class="block-for-card">
                                    <div class="card card-1">
                                        <div class="card-header">
                                            Profile
                                            <a href="#" class="btn btn-submit btn-card-edit float-right">Edit</a>
                                        </div>
                                        <div class="card-body">

                                            <div class="top-info">
                                                <div class="clearfix">
                                                    <p class="blue-text float-left">NAME</p>
                                                    <p class="float-right">[Update Below] ${name}</p>
                                                </div>

                                                <div class="clearfix">
                                                    <p class="blue-text float-left">COMPANY</p>
                                                    <p class="float-right">[Update Below] ${name}</p>
                                                </div>

                                                <div class="clearfix">
                                                    <p class="blue-text float-left">TELEPHONE</p>
                                                    <p class="float-right">[Update Below] ${telephone}</p>
                                                </div>

                                                <div class="clearfix">
                                                    <p class="blue-text float-left">EMAIL</p>
                                                    <p class="float-right">TEST ${email}</p>
                                                </div>

                                                <div class="clearfix">
                                                    <p class="blue-text float-left">ADDRESS</p>
                                                    <p class="float-right">[Update Below] ${address}</p>
                                                </div>
                                            </div>
                                            <div class="bottom-info">
                                                <form action="" method="POST" class="row">
                                                    <div class="col-12 col-sm-6">
                                                        <div class="form-group">
                                                            <form action="" method="POST">
                                                            <label>First Name</label>
                                                            <input name="name" type="text" class="form-control" placeholder=""
                                                                   value=""/>
                                                        </div>

                                                        <div class="form-group">
                                                            <label>Last Name</label>
                                                            <input name="last_name" type="text" class="form-control" placeholder=""
                                                                   value=""/>
                                                        </div>

                                                        <div class="form-group">
                                                            <label>Company</label>
                                                            <input name="company" type="text" class="form-control" placeholder=""
                                                                   value=""/>
                                                        </div>

                                                        <div class="form-group form-group-telephone">
                                                            <label>Telephone (e.g. +1 858 336 7888)</label>

                                                                    <select name="tel_prefix" type="text" class="block-custom-select">
                                                                        <option value="+1">+1</option>
                                                                        <option value="+27">+27</option>
                                                                        <option value="+44">+44</option>
                                                                        <option value="+34">+34</option>
                                                                        <option value="+852">+852</option>
                                                                        <option value="+82">+82</option>
                                                                    </select>


                                                                <input name="telephone" type="text" class="form-control" placeholder=""
                                                                       value=""/>
                                                        </div>


                                                    </div>

                                                    <div class="col-12 col-sm-6">
                                                        <div class="form-group">
                                                            <label>Address Line 1</label>
                                                            <input name="address" type="text" class="form-control"
                                                                   placeholder="Street address, P.O. box, company, c/o …"
                                                                   value=""/>
                                                        </div>

                                                        <div class="form-group">
                                                            <label>Address Line 2</label>
                                                            <input name="address_2" type="text" class="form-control"
                                                                   placeholder="Apartment, suite, unit, building, floor …"
                                                                   value=""/>
                                                        </div>

                                                        <div class="form-group">
                                                            <label>City / Town</label>
                                                            <input name="city" type="text" class="form-control" placeholder=""
                                                                   value=""/>
                                                        </div>

                                                        <div class="form-group">
                                                            <label>State / Province / Region</label>
                                                            <input name="state" type="text" class="form-control" placeholder=""
                                                                   value=""/>
                                                        </div>

                                                        <div class="form-group">
                                                            <label>Zip / Postal Code</label>
                                                            <input name="zip" type="text" class="form-control" placeholder=""
                                                                   value=""/>
                                                        </div>

                                                        <div class="form-group">
                                                            <label>Country</label>

                                                                <select name="country" type="text" class="block-custom-select">
                                                                    <option value="USA">USA</option>
                                                                    <option value="South Africa">South Africa</option>
                                                                    <option value="UK">UK</option>
                                                                </select>

                                                        </div>
                                                    </div>

                                                    <div class="col-12 bottom-btn">
                                                        <div class="block-info-msg error" tal:condition="error">
                                                            <i class="la la-close red"></i>
                                                            <span>${error}</span>
                                                            <i class="fa fa-close grey"></i>
                                                        </div>
                                                        <button type="submit"
                                                                class="btn btn-submit btn-grey float-right">Update
                                                        </button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </section>


    </div>
</div>
