<div metal:use-macro="view.layout">
    <div metal:fill-slot="main_content">

        <section class="section-page authorization-page">
            <div class="section-page-content">
                <div class="block-authorization">

                    <div class="block-with-info">
                        <h2>Purchase successful!</h2>

                        <div class="block-img">
                            <i class="la la-smile-o"></i>
                        </div>

                        <p class="text-center">Thanks for purchasing ${item_quantity} of ${item}</p>

                        <p class="text-center"><a href="/account/index" class="btn btn-link">Go back to the account</a> </p>
                    </div>

                </div>
            </div>
        </section>

    </div>
</div>
